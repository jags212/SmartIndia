
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
    <div class="forgot-password-area">
        <div class="d-table">
            <div class="d-table-cell">
                <div class="forgot-password-content">
                    <div class="row m-0">
                        <div class="col-lg-12 p-0">
                            <div class="forgot-password-form">
                                <h2>Recover your password</h2>
                                <p class="mb-0">Please provide the email address or mobile no that you used when you signed up for your OCR account.</p>

                                <form>
                                    <div class="form-group">
                                        <input type="email" class="form-control" name="name" placeholder="Email">
                                        <span class="label-title">
                                            <i class='bx bx-envelope'></i>
                                        </span>
                                    </div>
                                    <a href="forgot-code-verification.html" class="forgot-password-btn">Send Password</a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

