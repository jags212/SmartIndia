@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_FrontPannelLayout.cshtml";
}
<title>OCR | Change Password</title>
@section Scripts{
    <script src="~/ApplicationScripts/Common/custom-validate.js"></script>
    <script src="~/ApplicationScripts/UserRegistration/change-password.js"></script>
}
<!-- Breadcrumb Area -->
<div class="breadcrumb-area">
    <h1>Change Password</h1>
    <ol class="breadcrumb">
        <li class="item">
            <a href="attendee-dashboard.html"><i class='bx bx-home-alt'></i></a>
        </li>
        <li class="item">Dashboard</li>
        <li class="item">Change Password</li>
    </ol>
</div>
<!-- End Breadcrumb Area -->
<!-- Start -->
<div class="card mb-30">
    <div class="card-body">
        <form>
            <div class="form-group">
                <label>Current password</label>
                <input type="password" id="txtCurrentPass" ondrop="return false;" onpaste="return false;" class="form-control col-form-6" maxlength="50">
            </div>
            <div class="form-group">
                <label>New password</label>
                <input type="password" id="txtPassword" ondrop="return false;" onpaste="return false;" class="form-control col-form-6" maxlength="50">
            </div>
            <div class="form-group">
                <label>Confirm new password</label>
                <input type="password" id="txtCnfmPassword" ondrop="return false;" onpaste="return false;" class="form-control col-form-6" maxlength="50">
            </div>
            <input type="button" id="btnChange" class="btn btn-primary" value="Change" />
            <a asp-area="ManageUsers" asp-controller="Users" asp-action="Profile" class="btn btn-warning">Cancel</a>
        </form>

    </div>
</div>

<!-- End -->
