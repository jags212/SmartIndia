@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
    <title>OCR - Contact Us</title>
@section Scripts{
    <script>
        $(document).ready(function () {
            $(".ocr-search-container").hide();
            loadNavigation('Contact', 'contact');
        });
    </script>
} 
<div class="course-area">
    <div class="d-table">
        <div class="d-table-cell">
            <div class="edgt-content">
                <div class="edgt-content-inner">
                    <div class="edgt-title-holder edgt-standard-with-breadcrumbs-type edgt-has-bg-image edgt-bg-parallax"
                         style="height: 180px;background-image: url(&quot;../../assets/img/breadcrumb-img-1.png&quot;);background-position: center 0px;" data-height="180">
                        <div class="edgt-title-image">
                            <img itemprop="image" src="~/assets/img/breadcrumb-img-1.png" alt="ocr" />
                        </div>
                        <div class="edgt-title-wrapper" style="height: 180px">
                            <div class="edgt-title-inner">
                                <div class="edgt-grid">
                                    <div class="edgt-title-inner-holder">
                                        <div class="edgt-title-info">
                                            <h2 class="edgt-page-title-black">Contact Us</h2>
                                        </div>
                                        <div class="edgt-breadcrumbs-info">
                                            <div itemprop="breadcrumb" class="edgt-black-breadcrumbs edgt-has-inline-style">
                                                <a itemprop="url" asp-area="ManageUsers" asp-controller="Users" asp-action="Login">Home</a>
                                                <span class="edgt-delimiter">&nbsp; / &nbsp;</span>
                                                <span class="edgt-current">Contact Us</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <section class="container mt-5">
                        <div class="row">
                            <div class="col-sm-12 mb-4 col-md-5 contact-detail">
                                <h2>Contact Details</h2>
                                <p>@*Lorem Ipsn gravida nibh vel velit auctor aliquetnean sollic itudin, quis bibendum auci elit consequatipsutis sem.*@</p>
                                <div class="mt-50"></div>
                                <h3 class="cont-address">India Office</h3>
                                <div class="edgt-il-text">
                                    <i class="bx bxs-phone"></i>
                                    <span>+91-9868129898</span>
                                </div>
                                <div class="edgt-il-text">
                                    <i class="bx bx-envelope"></i>
                                    <span>admin@easternbay.in</span>
                                </div>
                                <div class="edgt-il-text">
                                    <i class="bx bx-map"></i>
                                    <span>DCB-626, DLF Cyber City, Bhubaneswar, Odisha</span>
                                </div>
                                @*<div class="edgt-separator"></div>
                                    <h3 class="cont-address">Hamburg Office</h3>
                                    <div class="edgt-il-text">
                                        <i class="bx bxs-phone"></i>
                                        <span>1-677-124-44227</span>
                                    </div>
                                    <div class="edgt-il-text">
                                        <i class="bx bx-envelope"></i>
                                        <span>contact@ocr.com</span>
                                    </div>
                                    <div class="edgt-il-text">
                                        <i class="bx bx-map"></i>
                                        <span>184 Main Collins Street West victoria 8007</span>
                                    </div>*@
                            </div>
                            <div class="col-sm-12 col-md-7">
                                <div class="card contact-form">
                                    <div class="card-header p-0">
                                        <div class="contact-card-title">Feel free to write us</div>
                                    </div>
                                    <div class="card-body p-3">
                                        <div class="col-sm-12 col-md-6 ocr-float-left">
                                            <div class="form-group">
                                                <label>Name*</label>
                                                <div class="input-group">
                                                    <input type="text" class="form-control" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-12 col-md-6 ocr-float-left">
                                            <div class="form-group">
                                                <label>Email*</label>
                                                <div class="input-group">
                                                    <input type="email" class="form-control" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-12 col-md-12">
                                            <div class="form-group">
                                                <label>Subject</label>
                                                <div class="input-group">
                                                    <input type="text" class="form-control">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-12 col-md-12">
                                            <div class="form-group">
                                                <label>Message*</label>
                                                <div class="input-group">
                                                    <textarea class="form-control" cols="40" rows="4"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-12 col-md-12">
                                            <input type="submit" name="submit" value="Submit" class="btn btn-primary">
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
