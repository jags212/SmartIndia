<div class="sidemenu-header">
    @if (User.IsInRole("Host"))
    {
        <a asp-area="Hosts" asp-controller="HostDashboard" asp-action="Dashboard" class="navbar-brand d-flex mobile-d-flex align-items-center">
            <img src="~/assets/img/small-logo.png" alt="OCR" />
            <span>OCR</span>
        </a>
    }
    else
    {
        <a asp-area="Attendee" asp-controller="Dashboard" asp-action="AttendeeDashboard" class="navbar-brand d-flex mobile-d-flex align-items-center">
            <img src="~/assets/img/small-logo.png" alt="OCR" />
            <span>OCR</span>
        </a>
    }
    <div class="burger-menu d-none d-lg-block">
        <span class="top-bar"></span>
        <span class="middle-bar"></span>
        <span class="bottom-bar"></span>
    </div>

    <div class="responsive-burger-menu d-block d-lg-none">
        <span class="top-bar"></span>
        <span class="middle-bar"></span>
        <span class="bottom-bar"></span>
    </div>
</div>

<div class="sidemenu-body">
    <ul class="sidemenu-nav metisMenu h-100" id="sidemenu-nav" data-simplebar>
        @if (User.IsInRole("Host"))
        { 
            <li class="nav-active">
                <a href="javascript:void(0);">
                    <span class="icon">
                        <i class='bx bxs-face'></i>
                    </span>
                    <span class="menu-title">Host</span>
                </a>
            </li>
            <li class="nav-item host-dash">
                <a class="nav-link" asp-area="Hosts" asp-controller="HostDashboard" asp-action="Dashboard">
                    <span class="icon">
                        <i class='bx bx-home-circle'></i>
                    </span>
                    <span class="menu-title">Dashboard</span>
                </a>
            </li>
            <li class="nav-item add-course">
                <a class="nav-link" asp-area="Hosts" asp-controller="Courses" asp-action="Courses">
                    <span class="icon">
                        <i class='bx bxl-discourse'></i>
                    </span>
                    <span class="menu-title">Add Course</span>
                </a>
            </li>
            <li class="nav-item schedular">
                <a class="nav-link" asp-area="Hosts" asp-controller="Schedular" asp-action="schedular">
                    <span class="icon">
                        <i class='bx bxs-book-content'></i>
                    </span>
                    <span class="menu-title">Scheduler</span>
                </a>
            </li>
            <li class="nav-item classwall">
                <a class="nav-link" asp-area="Hosts" asp-controller="ClassWall" asp-action="ClassWall">
                    <span class="icon">
                        <i class='bx bx-card'></i>
                    </span>
                    <span class="menu-title">My Class Wall</span>
                </a>
            </li>
            <li class="nav-item upcomingclasses">
                <a class="nav-link" asp-area="Hosts" asp-controller="upcomingclasses" asp-action="upcomingclasses">
                    <span class="icon">
                        <i class='bx bx-video-recording'></i>
                    </span>
                    <span class="menu-title">Upcoming Classes</span>
                </a>
            </li>
            <li class="nav-item attendee">
                <a class="nav-link" asp-area="Hosts" asp-controller="attendees" asp-action="attendees">
                    <span class="icon">
                        <i class='bx bxs-user-detail'></i>
                    </span>
                    <span class="menu-title">Attendees</span>
                </a>
            </li>
            <li class="nav-item rescheduling">
                <a class="nav-link" asp-area="Hosts" asp-controller="Rescheduling" asp-action="rescheduling">
                    <span class="icon">
                        <i class='bx bxs-book-content'></i>
                    </span>
                    <span class="menu-title">Rescheduling</span>
                </a>
            </li>
            <li class="nav-active">
                <a href="javascript:void(0);">
                    <span class="icon">
                        <i class='bx bx-user'></i>
                    </span>
                    <span class="menu-title">Attendee</span>
                </a>
            </li>
        }
        @if (User.IsInRole("Host") || User.IsInRole("Attendee"))
        {
            <li class="nav-item AttendeeDashboard">
                <a class="nav-link" asp-area="Attendee" asp-controller="Dashboard" asp-action="AttendeeDashboard">
                    <span class="icon">
                        <i class='bx bx-home-circle'></i>
                    </span>
                    <span class="menu-title">Dashboard</span>
                </a>
            </li>
            <li class="nav-item EnrollCourse">
                <a class="nav-link" asp-area="Attendee" asp-controller="EnrollCourses" asp-action="EnrollCourse">
                    <span class="icon">
                        <i class='bx bxl-discourse'></i>
                    </span>
                    <span class="menu-title">Enroll Courses</span>
                </a>
            </li>
            <li class="nav-item ClassWall-Att">
                <a class="nav-link" asp-area="Attendee" asp-controller="ClassWall" asp-action="ClassWall">
                    <span class="icon">
                        <i class='bx bx-card'></i>
                    </span>
                    <span class="menu-title">Class Wall</span>
                </a>
            </li>
            <li class="nav-item upcomingclasses-att">
                <a class="nav-link" asp-area="Attendee" asp-controller="upcomingclasses" asp-action="upcomingclasses">
                    <span class="icon">
                        <i class='bx bx-video-recording'></i>
                    </span>
                    <span class="menu-title">Upcoming Classes</span>
                </a>
            </li>
        }
        @if (User.IsInRole("Attendee"))
        {
            <li class="nav-item">
                <a href="javascript:void(0);" class="nav-link host-color" data-toggle="modal" data-target="#GetHostModal">
                    <span class="icon">
                        <i class='bx bxs-face'></i>
                    </span>
                    <span class="menu-title">Be A Host</span>
                </a>
            </li>
        }
    </ul>
</div>
