@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Smart India</title>

    <link rel="icon" type="image/png" href="~/assets/img/favicon.png" />
    <!-- Vendors Min CSS -->
    <link rel="stylesheet" href="~/assets/css/vendors.min.css" />
    <!-- Fontawesome CSS -->
    <link rel="stylesheet" href="~/assets/css/all.min.css">
    <!-- Style CSS -->
    <link rel="stylesheet" href="~/assets/css/style.css" />
    <!-- Responsive CSS -->
    <link rel="stylesheet" href="~/assets/css/responsive.css" />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/assets/css/custom.css" />
    <link href="~/assets/css/core.css" rel="stylesheet" />
    <!-- Country Code CSS -->
    <link rel="stylesheet" href="~/assets/css/intlTelInput.css" />
    <!-- Bootstrap Dialog Alert CSS -->
    <link href="~/assets/css/bootstrap-dialog.min.css" rel="stylesheet" />
</head>
<body class="main-body">
    <div class="learn-main-content">
        <!--Start Header Area-->
        <div class="col-position">
            <div id="black-topbar" class="hidden-xs noanimate" role="navigation" aria-label="Resources">
                <ul class="list-inline pull-left res-pull-left" role="menubar">
                    <li>
                        <span>Call <a href="callto:+123467897">+44 300 303 0266</a></span>
                    </li>
                    <li>
                        <span>
                            Follow Us
                            <a href="https://www.facebook.com/" class="nav-social-media"><i class="bx bxl-facebook"></i></a>
                            <a href="https://twitter.com/" class="nav-social-media"><i class="bx bxl-twitter"></i></a>
                            <a href="https://www.linkedin.com/" class="nav-social-media"><i class="bx bxl-linkedin"></i></a>
                            <a href="https://www.instagram.com/" class="nav-social-media"><i class="bx bxl-instagram"></i></a>
                        </span>
                    </li>
                </ul>
                <ul class="list-inline pull-right" role="menubar">
                    <li role="none">
                        <a role="menuitem" href="javascript:void(0);">Get App</a>
                    </li>
                    <li>
                        <a role="menuitem" href="javascript:void(0);">Support</a>
                    </li>
                </ul>
            </div>
            <div class="d-flex flex-column flex-md-row align-items-center p-2 px-md-4 bg-white border-bottom shadow-sm header-position">
                <div class="pull-left pull-left-width">
                    <!-- Navigation -->
                    <nav class="navbar new-navbar navbar-expand-lg nav navbar-default static-top">
                        <div class="container">
                            <a class="navbar-brand" asp-area="ManageUsers" asp-controller="Users" asp-action="Login">
                                <img src="~/assets/img/logo.png" alt="OCR" />
                            </a>
                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"><i class="fa fa-bars"></i></span>
                            </button>
                            <div class="collapse navbar-collapse ocr-main-menu" id="navbarResponsive">
                                <ul class="navbar-nav">
                                    <li class="nav-item home">
                                        <a class="nav-link" asp-area="ManageUsers" asp-controller="Users" asp-action="Login">
                                            Home
                                        </a>
                                    </li>
                                    <li class="nav-item about">
                                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">About</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link courses" href="courses-list.html">Courses</a>
                                    </li>
                                    <li class="nav-item contact">
                                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </nav>
                </div>
                <div class="pull-right res-pull-right">
                    <div class="ocr-search-container">
                        <input type="text" placeholder="Search anything...">
                        <div class="ocr-search"></div>
                    </div>
                    <a class="btn btn-red" asp-area="ManageUsers" asp-controller="Users" asp-action="Login">Sign In</a>
                </div>
            </div>
        </div>
        <!--End Header Area-->

        @RenderBody()
        <div class="loader" id="img" style="display:none">
        </div>
    </div>
    <div class="clearfix"></div>

    <!-- Start Footer Area -->
    <footer class="footer">
        <div class="container">
            <div class="display-inline-block">
                <span class="footer-text-muted">Copyright ©@DateTime.Now.Year OCR. All rights reserved. </span>
            </div>
            <div class="display-inline-block ocr-float-right res-ocr-float-right">
                <div class="footer-links"> 
                    <a asp-area="" asp-controller="Home" asp-action="TermsCondition" class="link-1">Terms and Conditions</a>
                    <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
                </div>
            </div>
        </div>
    </footer>
    <!-- End Footer Area -->

    <script type="text/javascript">
        ServiceURL = "@Configuration.GetSection("HostURL")["ServiceURL"]";
        ClientURL = "@Configuration.GetSection("HostURL")["ClientURL"]";
    </script>
    <!-- Vendors Min JS -->
    <script src="~/assets/js/vendors.min.js"></script>
    <!-- jvectormap Min JS -->
    <script src="~/assets/js/jvectormap-1.2.2.min.js"></script>
    <!-- jvectormap World Mill JS -->
    <script src="~/assets/js/jvectormap-world-mill-en.js"></script>
    <!-- Custom JS -->
    <script src="~/assets/js/custom.js"></script>
    <!-- Scrolling Top JS -->
    <script src="~/assets/js/scroll-top.js"></script>
    <!-- Bootstrap Dialog Min Alert JS -->
    <script src="~/assets/js/bootstrap.min.js"></script>
    <script src="~/assets/js/bootstrap-dialog.min.js"></script>
    <script>
        $(document).ready(function () {
            $.ajaxSetup({
                beforeSend: function (xhr) {
                    $('#img').show();
                },
                complete: function () {
                    $('#img').hide();
                }
            });
        });
    </script>
    <script>
        function loadNavigation(actionName, menuName) { 
            var pathName = window.location.pathname;
            var path = pathName.split("/"); 
            var sPath = path[2];
            var tlen = path.length;
            var sPath = path[tlen - 1];
            if (actionName == sPath) { 
                $('.' + menuName).addClass('active');
            }
        }
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
