@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Smart India</title>

    <link rel="icon" type="image/png" href="~/assets/img/favicon.png" />
    <!-- Vendors Min CSS -->
    <link rel="stylesheet" href="~/assets/css/vendors.min.css" />
    <!-- Fontawesome CSS -->
    <link rel="stylesheet" href="~/assets/css/all.min.css">
    <!-- Style CSS -->
    <link rel="stylesheet" href="~/assets/css/style.css" />
    <!-- Responsive CSS -->
    <link rel="stylesheet" href="~/assets/css/responsive.css" />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/assets/css/custom.css" />
    <!-- Country Code CSS -->
    <link rel="stylesheet" href="~/assets/css/intlTelInput.css" />
    <!-- Bootstrap Dialog Alert CSS -->
    <link href="~/assets/css/bootstrap-dialog.min.css" rel="stylesheet" />
</head>
<body class="main-body">
    <div class="learn-main-content">
        <!--Start Header Area-->
        <div class="col-position">
            <div id="black-topbar" class="hidden-xs noanimate" role="navigation" aria-label="Resources">
                <div class="container" role="menubar">
                    <ul class="list-inline pull-right" role="menubar">
                        <li role="none">
                            <a role="menuitem" href="javascript:void(0);">Get App</a>
                        </li>
                        <li>
                            <a role="menuitem" href="javascript:void(0);">Support</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 bg-white border-bottom shadow-sm header-position">

                <div class="pull-left pull-left-width">
                    <a asp-area="ManageUsers" asp-controller="Users" asp-action="Login">
                        <img src="~/assets/img/logo.png" alt="OCR" />
                    </a>
                </div>
                <div class="pull-right">
                    <a class="btn btn-red" asp-area="ManageUsers" asp-controller="Users" asp-action="Login">Sign In</a>
                </div>
            </div>
        </div>
        <!--End Header Area-->

        @RenderBody()
        <div class="loader" id="img" style="display:none">
        </div>
    </div>
    <div class="clearfix"></div>

    <!-- Start Footer Area -->
    <footer class="footer">
        <div class="container">
            <span class="footer-text-muted">Copyright ©2020 Smart India. All rights reserved. </span>
        </div>
    </footer>
    <!-- End Footer Area -->

    <script type="text/javascript">
        ServiceURL = "@Configuration.GetSection("HostURL")["ServiceURL"]";
    </script>
    <!-- Vendors Min JS -->
    <script src="~/assets/js/vendors.min.js"></script>
    <!-- jvectormap Min JS -->
    <script src="~/assets/js/jvectormap-1.2.2.min.js"></script>
    <!-- jvectormap World Mill JS -->
    <script src="~/assets/js/jvectormap-world-mill-en.js"></script>
    <!-- Custom JS -->
    <script src="~/assets/js/custom.js"></script>
    <!-- Bootstrap Dialog Min Alert JS -->
    <script src="~/assets/js/bootstrap.min.js"></script>
    <script src="~/assets/js/bootstrap-dialog.min.js"></script>
    <script>
        $(document).ready(function () {
            $.ajaxSetup({
                beforeSend: function (xhr) {
                    $('#img').show();
                },
                complete: function () {
                    $('#img').hide();
                }
            });
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
